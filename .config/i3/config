set $inactive-text-color #676E7D
set $urgent-bg-color     #D82531

hide_edge_borders both

# window colors
#                       border              background         text                 indicator
client.focused          $bg-color           $bg-color          $text-color          #0F131F
client.unfocused        $inactive-bg-color  $inactive-bg-color $inactive-text-color #161C36
client.focused_inactive $inactive-bg-color  $inactive-bg-color $inactive-text-color #161C36
client.urgent           $urgent-bg-color    $urgent-bg-color   $text-color          #D82531

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
